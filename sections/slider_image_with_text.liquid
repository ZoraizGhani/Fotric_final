      { "type": "color", "id": "slider_bg_color", "label": "Slider background", "default": "#f9fafb" },
      { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#111827" },
      { "type": "color", "id": "text_color", "label": "Text color", "default": "#4b5563" },
      { "type": "color", "id": "button_bg_color", "label": "Button background", "default": "#2563eb" },
      { "type": "color", "id": "button_text_color", "label": "Button text", "default": "#ffffff" },
      { "type": "color", "id": "dot_color", "label": "Dot color", "default": "#d1d5db" },
      { "type": "color", "id": "dot_active_color", "label": "Active dot color", "default": "#2563eb" },
  
      { "type": "header", "content": "Typography – Desktop" },
