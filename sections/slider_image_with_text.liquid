      { "type": "range", "id": "text_size_desktop", "label": "Text size", "min": 12, "max": 30, "step": 1, "default": 16 },
      { "type": "range", "id": "button_text_size_desktop", "label": "Button text size", "min": 12, "max": 30, "step": 1, "default": 14 },
      { "type": "range", "id": "button_width_desktop", "label": "Button width", "min": 100, "max": 300, "step": 5, "default": 140 },
      { "type": "range", "id": "button_height_desktop", "label": "Button height", "min": 30, "max": 80, "step": 2, "default": 44 },
      { "type": "range", "id": "desc_width_desktop", "label": "Description width", "min": 200, "max": 700, "step": 10, "default": 420 },
  
      { "type": "header", "content": "Typography – Mobile" },
      { "type": "range", "id": "heading_size_mobile", "label": "Heading size", "min": 16, "max": 48, "step": 1, "default": 24 },
      { "type": "range", "id": "text_size_mobile", "label": "Text size", "min": 12, "max": 24, "step": 1, "default": 14 },
      { "type": "range", "id": "button_text_size_mobile", "label": "Button text size", "min": 12, "max": 24, "step": 1, "default": 14 },
      { "type": "range", "id": "button_width_mobile", "label": "Button width", "min": 100, "max": 260, "step": 5, "default": 130 },
      { "type": "range", "id": "button_height_mobile", "label": "Button height", "min": 30, "max": 70, "step": 2, "default": 42 },
      { "type": "range", "id": "desc_width_mobile", "label": "Description width", "min": 200, "max": 500, "step": 10, "default": 300 }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          { "type": "text", "id": "heading", "label": "Heading" },
          { "type": "textarea", "id": "text", "label": "Description" },
          { "type": "text", "id": "button_label", "label": "Button label" },
          { "type": "url", "id": "button_link", "label": "Button link" },
          { "type": "image_picker", "id": "image", "label": "Image" }
        ]
      }
    ],
    "presets": [
      { "name": "Feature Slider (Swiper)" }
    ]
  }
  {% endschema %}
  