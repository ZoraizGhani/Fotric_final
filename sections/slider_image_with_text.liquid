      { "type": "range", "id": "padding_top_mobile", "label": "Padding top", "min": 0, "max": 150, "step": 5, "default": 40 },
      { "type": "range", "id": "padding_bottom_mobile", "label": "Padding bottom", "min": 0, "max": 150, "step": 5, "default": 40 },
  
      { "type": "header", "content": "Colors" },
