<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
  
  {% style %}

.feature-heading {
    display: flex;
    flex-direction: column;
    margin-bottom:0px;
}
  .feature-slider {
    background-color: {{ section.settings.section_bg_color }};
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }
  
  .feature-slider__wrapper {
  
    overflow: hidden;
  }
  
  .feature-slide {

    justify-content: space-between;
    display: flex !important;
    align-items: center;
    gap: 40px;
    background-color: {{ section.settings.slider_bg_color }};
    padding:0 0 0 46px;
    border-radius: 12px;
  }
  
  .feature-slide__content .div_class{
    max-width: {{ section.settings.desc_width_desktop }}px;
  }
  
  .feature-slide__content h2 {
    font-size: {{ section.settings.heading_size_desktop }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: 16px;
  }
  
  .feature-slide__content p {
    font-size: {{ section.settings.text_size_desktop }}px;
    color: {{ section.settings.text_color }}99;
 
  }
  p.feature-heading__desc {

    color: {{ section.settings.text_color }}99;

  }
  span.feature-heading__small{
font-weight:500;
color: {{ section.settings.text_color }}cc;

}
  .feature-slide__content a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.button_text_size_desktop }}px;
    width: {{ section.settings.button_width_desktop }}px;
    height: {{ section.settings.button_height_desktop }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: 6px;
    text-decoration: none;
  }
  .feature-slider__wrapper.swiper.swiper-initialized.swiper-horizontal.swiper-backface-hidden {
    border-radius: 10px;
    padding-bottom: 80px;

}
  .feature-slide__image img {
    width: 100%;
    max-width: 100%;
    border-radius: 0 ;
    display: flex;
    justify-content: flex-end;
  }
  
  /* Pagination */
  .feature-slider__dots {
    margin-top: 30px;
    text-align: center;
  }
  
  .swiper-pagination-bullet {
    background: {{ section.settings.dot_color }};
    opacity: 1;
  }
  
  .swiper-pagination-bullet-active {
    background: {{ section.settings.dot_active_color }};
  }
  .feature-slide__image {
    width: 50%;
}
.feature-slide__content {
    width: 50%;
}

.feature-slider  span.swiper-pagination-bullet.feature-pagination-number {
    width: 49px;
    height: 49px;
    font-weight:700 !important;
    font-size: 16px;
    display: flex;

}

.feature-slider  span.swiper-pagination-bullet.feature-pagination-number {
    background: transparent;
}
.feature-slider  span.swiper-pagination-bullet.feature-pagination-number.swiper-pagination-bullet-active{



    background: #1566E0;
    border: 2px solid #1566E0;
}
  /* Mobile */
  @media (max-width: 768px) {
    .feature-slider__wrapper.swiper.swiper-initialized.swiper-horizontal.swiper-backface-hidden {
    border-radius: 0 !important;
    padding-bottom: 0px;
}
    .feature-slide__image {
    width: 100%;
}

.feature-slide.swiper-slide.swiper-slide-active {
    display: flex;
    flex-direction: column-reverse;
    padding: 0;
    border: unset;
}

.feature-slide__content {
    width: 100%;
}
section.feature-slider .container {
    padding: 0;
}

.feature-slide__content .div_class {

        margin: 0 auto;
    }

    .feature-slide__content .div_class {
        max-width: 100%;
        margin: 0 auto;
        text-align: left;
        padding: 0 20px 40px 20px;
    }
  .feature-slider  span.swiper-pagination-bullet.feature-pagination-number {
    width: 24px;
    height: 24px;
    font-size: 12px;
}
    .feature-heading {
    padding-left: 20px;
    margin:0 !important;
}
    .feature-slider {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  
    .feature-slide {
      flex-direction: column;
      text-align: center;
      padding: 24px;
    }
  
    .feature-slide__content .div_class{
      max-width: {{ section.settings.desc_width_mobile }}px;
    }
  
    .feature-slide__content h2 {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }
  
    .feature-slide__content p {
      font-size: {{ section.settings.text_size_mobile }}px;
    }
  
    .feature-slide__content a {
      font-size: {{ section.settings.button_text_size_mobile }}px;
      width: {{ section.settings.button_width_mobile }}px;
      height: {{ section.settings.button_height_mobile }}px;
    }
  }

  /* Number pagination style */
.feature-pagination-number {
  width: 32px;
  height: 32px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 14px;
  font-weight: 500;
  color: #9ca3af;
  background: transparent;
  transition: all 0.3s ease;
}

.swiper-pagination-bullet-active.feature-pagination-number {
  background: #2563eb;
  color: #ffffff;
}
.feature-slider__wrapper {
  width: 100%;
  overflow: hidden;
}

.feature-slider__wrapper .swiper-wrapper {
  width: 100%;
}

.feature-slider__wrapper .swiper-slide {
  width: 100% !important;
  max-width: 100% !important;
  flex-shrink: 0;
  box-sizing: border-box;
}

  {% endstyle %}
  
  <section class="feature-slider">

    <div class="container">

        <div class="feature-heading">
           
              {% if section.settings.small_title != blank %}
                <span class="feature-heading__small subtitle">
                  {{ section.settings.small_title }}
                </span>
              {% endif %}
          
              {% if section.settings.heading != blank %}
                <h2 class="feature-heading__title">
                  {{ section.settings.heading }}
                </h2>
              {% endif %}
          
              {% if section.settings.description != blank %}
                <p class="feature-heading__desc">
                  {{ section.settings.description }}
                </p>
              {% endif %}
          
        </div>
    <div class="feature-slider__wrapper swiper ">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="feature-slide swiper-slide">
            <div class="feature-slide__content">
                <div class="div_class"> 
              <h2>{{ block.settings.heading }}</h2>
              <p>{{ block.settings.text }}</p>
              {% if block.settings.button_label != blank %}
                <a href="{{ block.settings.button_link }}">
                  {{ block.settings.button_label }}
                </a>
              {% endif %}

            </div>
            </div>
  
            <div class="feature-slide__image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url  }}" alt="">
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
  
      <div class="feature-slider__dots swiper-pagination"></div>
    </div>

</div>
  </section>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      new Swiper('.feature-slider__wrapper', {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: false,
        grabCursor: true,
        observer: true,
        observeParents: true,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
          renderBullet: function (index, className) {
            return `
              <span class="${className} feature-pagination-number">
                ${index + 1}
              </span>
            `;
          }
        }
      });
    });
    </script>
    
    
