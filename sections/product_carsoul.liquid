<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" defer></script>

<script defer>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('.products-hero');
    const cards = Array.from(section.querySelectorAll('.product-card'));
  
    // Create Swiper container
    const swiperContainer = document.createElement('div');
    swiperContainer.classList.add('swiper');
  
    // Create wrapper
    const swiperWrapper = document.createElement('div');
    swiperWrapper.classList.add('swiper-wrapper');
  
    // Move cards into swiper slides
    cards.forEach(card => {
      const slide = document.createElement('div');
      slide.classList.add('swiper-slide');
      slide.appendChild(card);
      swiperWrapper.appendChild(slide);
    });
  
    swiperContainer.appendChild(swiperWrapper);
    section.appendChild(swiperContainer);
  
    // Create navigation buttons with your custom classes + Swiper classes
    const prev = document.createElement('div');
    prev.classList.add('swiper-button-prev', 'nav', 'prev');
    prev.innerText = '<'; // Add left arrow
  
    const next = document.createElement('div');
    next.classList.add('swiper-button-next', 'nav', 'next');
    next.innerText = '>'; // Add right arrow
  
    swiperContainer.appendChild(prev);
    swiperContainer.appendChild(next);
  
    // Create pagination
    const pagination = document.createElement('div');
    pagination.classList.add('swiper-pagination', 'dots');
    swiperContainer.appendChild(pagination);
  
    // Initialize Swiper
    new Swiper(swiperContainer, {
      slidesPerView: 1.5,  // Mobile default
      spaceBetween: 15,
      loop: true,
      navigation: {
        nextEl: next,
        prevEl: prev,
      },
      pagination: {
        el: pagination,
        clickable: true,
      },
      breakpoints: {
        0: { slidesPerView: 1.5, spaceBetween: 15 },
        768: { slidesPerView: 3, spaceBetween: 20 },
      },
    });
  });
  </script>
