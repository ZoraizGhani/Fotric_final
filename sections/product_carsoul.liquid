<section class="products-hero container ">
    <div class="hero-top">
      <div class="hero-text">
        <span class="subtitle">Products</span>
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.description }}</p>
      </div>
  
      <a href="{{ section.settings.view_all_link }}" class="view-all-btn">
        {{ section.settings.view_all_text }}
      </a>
    </div>
  
    <div class="carousel-wrapper">
      {% comment %} <button class="nav prev">‹</button> {% endcomment %}
  
      <div class="carousel-track">
        {% for product in section.settings.collection.products limit: 12 %}
          <div class="product-card">
            <a class="card_products" href="{{ product.url }}">
              <div class="product-image-wrap">
                <!-- First image -->
                <img
                  class="img-primary"
                  src="{{ product.featured_image | img_url: '400x' }}"
                  alt="{{ product.title }}"
                >
            
                <!-- Second image (if exists) -->
                {% if product.images.size > 1 %}
                  <img
                    class="img-secondary"
                    src="{{ product.images[1] | img_url: '400x' }}"
                    alt="{{ product.title }}"
                  >
                {% endif %}
              </div>
            </a>
  <div class="pdp_title">
            <h3>{{ product.title  | truncate:25 }}</h3>
            <div class="price">{{ product.price | money }}</div>
  
            <a href="{{ product.url }}" class="shop-btn button">Shop Now</a>
  </div>
          </div>
        {% endfor %}
      </div>
  
      {% comment %} <button class="nav next">›</button> {% endcomment %}
    </div>
  
    {% comment %} <div class="dots"></div> {% endcomment %}
  </section>
  
